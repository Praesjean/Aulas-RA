#Correção 2
soma = 0
media = 0
cont = 0
n = 10

while cont < n:
    nota = float(input(f"Digite sua nota: "))
    if nota > 10 or nota < 0:
        print("Nota inválida, informe novamente...")
    else:
        soma += nota #soma = soma + nota (acumular notas)
        cont += 1

media = soma/n

print(f"A sua média final é: {media:.2f}")
